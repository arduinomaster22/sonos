{
    "name": "arduinomaster22/sonos",
    "type": "library",
    "description": "Control Sonos speakers using a simple API",
    "keywords": [
        "sonos",
        "upnp",
        "streaming"
    ],
    "homepage": "https://github.com/duncan3dc/sonos",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Manoj Hortulanus",
            "role": "Developer"
        }
    ],
    "require": {
        "duncan3dc/cache": "*",
        "duncan3dc/domparser": "*",
        "duncan3dc/logger-aware-trait": "*",
        "duncan3dc/sonos-common": "*",
        "duncan3dc/speaker": "*",
        "guzzlehttp/guzzle": "*",
        "league/flysystem": "*",
        "psr/log": "*",
        "psr/simple-cache": "*",
        "ext-soap": "*",
        "ext-sockets": "*",
        "php": "^8.3"
    },
    "require-dev": {
        "duncan3dc/object-intruder": "*",
        "maglnet/composer-require-checker": "*",
        "mockery/mockery": "*",
        "nikic/php-parser": "*",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-mockery": "*",
        "phpstan/phpstan-phpunit": "*",
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "duncan3dc\\Sonos\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "duncan3dc\\SonosTests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/composer-require-checker",
            "vendor/bin/phpstan analyse --level=max src",
            "vendor/bin/phpstan analyse --level=max --configuration=phpstan-tests.neon tests",
            "vendor/bin/phpcs"
        ]
    },
    "minimum-stability": "dev"
}